<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Year</th>
      <th>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render 'form', movie: @movie %>
   
    
    <% @movies.each do |movie| %>
      <tr>
        <td id="<%= dom_id(movie) %>_title"><%= movie.title %></td>
        <td id="<%= dom_id(movie) %>_description"><%= movie.description %></td>
        <td id="<%= dom_id(movie) %>_duration"><%= pluralize(movie.duration, 'minute') %> </td>
        <td id="<%= dom_id(movie) %>_year"><%= movie.year %></td>
        <td id="<%= dom_id(movie) %>_name"><%= movie.director.name %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= render 'form_title', movie: movie %></td>
      </tr>
    <% end %>

    <tr id>
      <td>
        <%= link_to 'New Movie', new_movie_path %>
      </td>
    </tr>
    
  </tbody>
</table>

